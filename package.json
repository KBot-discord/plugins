{
	"name": "@kbotdev/plugins",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run ci:test",
		"test:build": "turbo run test:build",
		"lint": "turbo run ci:lint",
		"format": "turbo run format"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@microsoft/tsdoc": "^0.14.2",
		"@sapphire/eslint-config": "^4.4.2",
		"@sapphire/framework": "^4.4.3",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^4.0.0",
		"@types/node": "^20.2.3",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"discord-api-types": "^0.37.42",
		"discord.js": "^14.11.0",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"turbo": "^1.9.9",
		"typescript": "^5.0.4"
	},
	"lint-staged": {
		"*.{mjs,ts,js}": [
			"eslint --fix --ext mjs,js,ts",
			"prettier --write --loglevel=warn \"**/*.{js,ts}\""
		],
		"*.json": [
			"prettier --write --loglevel=warn \"**/*.json\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.5.1"
}
