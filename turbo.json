{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		},
		"test:build": {},
		"docs": {
			"dependsOn": ["build"],
			"outputs": ["docs/**"]
		},
		"lint": {
			"dependsOn": ["build"]
		},
		"format": {
			"dependsOn": ["build"]
		},
		"ci:lint": {
			"dependsOn": ["build"]
		}
	}
}
